{erl_opts,
 [debug_info,
  warnings_as_errors,
  warn_unused_vars,
  warn_shadow_vars,
  warn_unused_import,
  warn_obsolete_guard]}.

{deps, []}.

{project_plugins, [rebar3_hex, rebar3_ex_doc, rebar3_format]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc,
 [{extras, [{"README.md", #{title => "Overview"}}, {"LICENSE", #{title => "License"}}]},
  {main, "README.md"},
  {homepage_url, "https://github.com/rhblind/ocibuild"},
  {source_url, "https://github.com/rhblind/ocibuild"}]}.

{profiles, [{test, [{erl_opts, [nowarn_export_all]}, {deps, []}]}]}.

{shell, [{apps, [ocibuild]}]}.

%% Minimum OTP version required
{minimum_otp_vsn, "27"}.
